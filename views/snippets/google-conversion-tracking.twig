{% if add_gtag_script %}
    <script async src="https://www.googletagmanager.com/gtag/js?id={{ google_adwords_id|e('html_attr') }}"></script>
{% endif %}

<script>

    window.dataLayer = window.dataLayer || [];

    function gtag() {
        dataLayer.push(arguments);
    }

    gtag('js', new Date());
    gtag('config', '{{ google_adwords_id|e('esc_js') }}');

</script>

{% if google_conversion_label %}
    <script>
        gtag('event', 'conversion', {
            'send_to': '{{ google_adwords_id|e('esc_js') }}/{{ google_conversion_label|e('esc_js') }}',
            'value': '{{ order_total|e('esc_js') }}',
            'currency': '{{ currency|e('esc_js') }}',
            'transaction_id': '{{ tracking_id|e('esc_js') }}'
        });
    </script>
{% endif %}