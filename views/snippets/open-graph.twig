<!-- open graph -->
<meta property="og:site_name" content="{{ site_name }}"/>
<meta property="og:title" content="{{ title }}"/>
<meta property="og:description" content="{{ description|e('html_attr') }}"/>
<meta property="og:type" content="{{ type|e('html_attr') }}"/>
<meta property="og:url" content="{{ url|e('esc_url') }}"/>
{% if image %}
	<meta property="og:image" content="{{ image|e('esc_url') }}"/>
{% endif %}

